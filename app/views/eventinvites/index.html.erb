<h1 align="center">Event Inbox</h1>

<div class="map"><%= image_tag("map.png") %></div>

<div class="event-boxes" align="center">
	<div class="row event-trio">
		<% count = 0 %>
		<%(0..2).each do |event| %>
			<div class="col-md-4 event-box" id="myModal<%=count%>">
				<div class="event-details">
					<span class="event-name">Event name</span>
					<span class="event-datetime">Nov 24 @ 10pm</span>
					<span class="event-distance">.1 miles</span>
				</div>
				<div class="event-image">
					<%= image_tag("image.png") %>
				</div>
			</div>
			<% count += 1 %>
		<% end %>
	</div>
	<div class="row event-trio">
		<% count = 0 %>
		<%(0..2).each do |event| %>
			<div class="col-md-4 event-box" id="myModal<%=count%>">
				<div class="event-details">
					<span class="event-name">Event name</span>
					<span class="event-datetime">Nov 24 @ 10pm</span>
					<span class="event-distance">.1 miles</span>
				</div>
				<div class="event-image">
					<%= image_tag("image.png") %>
				</div>
			</div>
		<% end %>
	</div>
</div>

<!-- Modal (will appear thanks to the data-toggle="modal" --> 
<div class="modal hide" id="myModal"><!-- note the use of "hide" class -->
  <div class="modal-header">
    <button class="close" data-dismiss="modal">×</button>
    <h3>Modal header</h3>
  </div>
  <div class="modal-body">
    <p>One fine body…</p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a><!-- note the use of "data-dismiss" -->
    <a href="#" class="btn btn-primary">Save changes</a>
  </div>
</div>​
